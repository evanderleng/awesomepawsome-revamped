server {
    listen 80 default_server;
    server_name _;
    
    location / {
	return 301 https://awesomepawsome.shop$request_uri;
    }

    location /jenkins {
	return 301 https://jenkins.justdied.com$request_uri;
    }
}
server {
    listen 80;
    server_name awesomepawsome.shop www.awesomepawsome.shop;

    return 301 https://$host$request_uri;
}

server {
    listen 443;
    server_name awesomepawsome.shop www.awesomepawsome.shop;

    root /var/www/awesomepawsome/dist;  # Ensure this directory exists and contains your site
    index index.html index.htm;

    ssl_certificate /etc/letsencrypt/live/awesomepawsome.shop/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/awesomepawsome.shop/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;  # Security enhancements
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        try_files $uri $uri/ =404;
    }
}

server {
    listen 80;
    server_name jenkins.justdied.com;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name jenkins.justdied.com;

    ssl_certificate /etc/letsencrypt/live/jenkins.justdied.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/jenkins.justdied.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;  # Security enhancements
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass http://localhost:8080;  # Proxy to Jenkins running on 8080
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
